<div id="active_admin_content" class="without_sidebar">
	<div id="main_content_wrapper">
        <div id="main_content">
            <div class="paginated_collection">
				<div class="paginated_collection_contents">
					<div class="index_content">
						<div class="index_as_table">
							<table border="0" cellspacing="0" cellpadding="0" id="tables" class="index_table" paginator="true">
								<thead>
									<tr>
										<% @columns.each_with_index do |column, index| %>
											<th>
												<%= render :partial => "/shared/control_label", :locals => { :name => column.column_name } %>
											</th>
										<% end %>
									</tr>
								</thead>
								<tbody>
									<tr>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
            </div>
        </div>
    </div>
</div>

<h2>Show</h2>
<div style="clear:both;" ></div>

<% @columns.each_with_index do |column, index| %>
	<%= render :partial => "/shared/control_label", :locals => { :name => column.column_name } %>
<% end %>
<div style="clear:both;" ></div>
<% @rows.each_with_index do |row, index| %>
	<%= render :partial => "/shared/print_rows", :locals => { :data => row.row_data } %>
	<div <%= is_right_size(index) %>></div>
<% end %>
