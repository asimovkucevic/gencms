<div class = "container">
  <div class = "row">
    <div class = "span12" id = "Signin">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <h2>Sign in</h2>
          <div class="control-group">
            <%= f.label :email %>
            <div class="controls">
              <%= f.email_field :email %>
              <span class="help-block">This is how you'll login.</span>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password %>
            <div class="controls">
              <%= f.password_field :password %>
              <span class="help-block">Your password need to be at least 6 characters.</span>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
              <label class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
          <% end -%>
          <div>
            <%= f.submit "Sign in", :class => "btn btn-info btn-large" %>
          </div>
          <div class = "subtext">
            <p>
              Don't have an account?
              <%= render "devise/shared/links" %>
            </p>
          </div>
      <% end %>
      <div class="signin-providers">
          <h3>Sign in through one of these services:</h3>
          <a href="/auth/twitter" class="auth_provider">
            <%= image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" %>
          </a>
          <a href="/auth/facebook" class="auth_provider">
            <%= image_tag "facebook_64.png", :size => "64x64", :alt => "Facebook" %>
          </a>
      </div>
    </div>
  </div>
</div>


